<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.toprate.ocharo.activities.About">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:textColor="#000000"
        android:layout_marginBottom="15dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="About Schedular" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16sp"
        android:text="We understand that managing all your academic activities has not been easy. Thats why we came up with Schedular to help solve this. "
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16sp"
        android:text="Schedular is an android app that manages all your academic schedules by allowing you have a personal timetable, exams timetable, your school units and the respective lecturer contacts. It also has an option of storing all your notes and accessing them anytime you want."
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16sp"
        android:text="In addition to this, the Schedular apps repeatedly sends you notifications reminding you of different tasks to be completed and assignments to submit. "
        android:textStyle="bold" />


</LinearLayout>
